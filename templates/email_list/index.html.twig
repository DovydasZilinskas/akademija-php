{% extends 'base.html.twig' %}

{% block title %}Received Email List{% endblock %}

{% block body %}
    <h1>Email List</h1>
    <div class="wrapper">
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Full Name</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
            {% for email in pagination %}
            <tr>
                <td>{{ email.id }}</td>
                <td>{{ email.email }}</td>
                <td>{{ email.name }}</td>
                <td>{{ email.message }}</td>
                <td>{{ include('email_list/_delete_form.html.twig') }}</td>
            </tr>
            {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% block stylesheets %}
	<link href="{{ asset('css/form.css') }}" rel="stylesheet"/>
{% endblock %}
{% endblock %}
