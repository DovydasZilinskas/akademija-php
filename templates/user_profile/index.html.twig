{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
    <h1>UserProfile</h1>
    <a href="{{ path('contact') }}"><h4>Contact<h4></a>

    <table class="table">
        <tbody>
        {% for user_profile in user_profiles %}
            <tr>
                <td>{{ user_profile.name }}</td>
                </tr>
                <tr>
                <td>{{ user_profile.surname }}</td>
                </tr>
                <tr>
                <td>Age {{ user_profile.age }}</td>
                </tr>
                <tr>
                <td>
                    <a href="{{ path('user_profile_edit', {'id': user_profile.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>

    <h1>Experience Tab</h1>

    <table class="table">
        <tbody>
        {% for work_experience in work_experiences %}
            <tr>
                <td><h3>{{ work_experience.position }},</h3></td>
                </tr>
                <tr>
                <td><h4>{{ work_experience.company }}</h4></td>
                <td>From {{ work_experience.dateFrom ? work_experience.dateFrom|date('Y-m-d') : '' }} -</td>
                <td>To {{ work_experience.dateTo ? work_experience.dateTo|date('Y-m-d') : '' }}</td>
                                <td>
                    <a href="{{ path('work_experience_show', {'id': work_experience.id}) }}">show</a>
                    <a href="{{ path('work_experience_edit', {'id': work_experience.id}) }}">edit</a>
                </td>
                </tr>
                <tr>
                <td>
                    <ul>
                        <li>{{ work_experience.listOne }}</li>
                        <li>{{ work_experience.listTwo }}</li>
                        <li>{{ work_experience.listThree }}</li>
                    </ul>
                </td>
                </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('work_experience_new') }}">Create new</a>


    </table>

        <h1>Education Tab</h1>

    <table class="table">
        <tbody>
        {% for school in schools %}
            <tr>
                <td>{{ school.institution }}</td>
                <td>{{ school.title }}</td>
                <td>{{ school.dateFrom ? school.dateFrom|date('Y-m-d') : '' }}</td>
                <td>{{ school.dateTo ? school.dateTo|date('Y-m-d') : '' }}</td>
                <td>{{ school.listOne }}</td>
                <td>{{ school.listTwo }}</td>
                <td>{{ school.ListThree }}</td>
                <td>
                    <a href="{{ path('school_show', {'id': school.id}) }}">show</a>
                    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_new') }}">Create new</a>
{% endblock %}
