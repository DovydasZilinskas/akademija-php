{{ form_start(form, { 'attr': {'class': 'form'} }) }}
<div class="form-control">

	<div class="form-section">
		{{ form_row(form.name, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.surname, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.subtitle, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.age, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.description, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.linkedin, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.email, {'attr': {'class': 'form-row'}}) }}
		{{ form_row(form.github, {'attr': {'class': 'form-row'}}) }}
	</div>
	<div class="form-section">
		{{ form_help(form) }}
		{{ form_errors(form) }}
	</div>
	<button class="btn">
		{{ button_label|default('Save') }}
	</button>

</div>
{{ form_end(form) }}
