<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome to my Portfolio
			{% endblock %}
		</title>
		{{ encore_entry_link_tags('app') }}
		{{ encore_entry_link_tags('emails') }}
		{# <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?render=explicit&hl={{app.request.locale}}" async defer></script> #}
		<script src="https://www.google.com/recaptcha/api.js?onload=vueRecaptchaApiLoaded&render=explicit" async defer></script>
		<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
		<link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css" rel="stylesheet"/>
		<link href="{{ asset('css/index.css') }}" rel="stylesheet"/>
		<link href="{{ asset('css/modal.css') }}" rel="stylesheet"/>
	</head>
	<body>
	
		{% block header %}
			<header>
				<div class="logo-text">
					<a href="{{ path('user_profile_index') }}">Portfolio</a>
				</div>
				<nav>
					{% if not app.user %}
						<a id="modalBtn" href="#">Contact Me</a>
						<a href="{{ path('app_login') }}">Login</a>
					{% elseif app.user %}
						<a href="{{ path('email_list') }}">Emails</a>
						<a href="{{ path('app_logout') }}">Logout</a>
					{% endif %}
				</nav>
				<div id="contactModal" class="modal">
					<div class="modal-content">
						<span class="close">&times;</span>
						<div id="app"></div>
					</div>
				</div>
			</header>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block javascripts %}
			<script src="{{ asset('scripts/modal.js') }}"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
