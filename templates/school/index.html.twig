{% extends 'base.html.twig' %}

{% block title %}School index{% endblock %}

{% block body %}
    <h1>School index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Institution</th>
                <th>Title</th>
                <th>DateFrom</th>
                <th>DateTo</th>
                <th>ListOne</th>
                <th>ListTwo</th>
                <th>ListThree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school in schools %}
            <tr>
                <td>{{ school.id }}</td>
                <td>{{ school.institution }}</td>
                <td>{{ school.title }}</td>
                <td>{{ school.dateFrom ? school.dateFrom|date('Y-m-d') : '' }}</td>
                <td>{{ school.dateTo ? school.dateTo|date('Y-m-d') : '' }}</td>
                <td>{{ school.listOne }}</td>
                <td>{{ school.listTwo }}</td>
                <td>{{ school.ListThree }}</td>
                <td>
                    <a href="{{ path('school_show', {'id': school.id}) }}">show</a>
                    <a href="{{ path('school_edit', {'id': school.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_new') }}">Create new</a>
{% endblock %}
